<div class="wordlist">

  <p id="notice"><%= notice %></p>

  <h1 style="color: green">Listing Words</h1>
  <br><br>
  <center>
    <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th>Word</th>
            <th>Position</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @words.each do |word| %>
            <tr>
              <td><%= word.word %></td>
              <td><%= word.position %></td>
              <td><%= link_to 'Edit', edit_word_path(word) %>&nbsp;&nbsp;</td>
              <td><%= link_to 'Delete', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
   </center>
</div>
