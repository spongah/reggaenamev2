<center>
<p id="notice"><%= notice %></p>

<h1>Listing Words</h1>
<br><br>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word %></td>
        <td><%= word.position %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Delete', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br><br>

<%= link_to("GENERATE NEW BAND NAME", welcome_index_path) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to("ADD NEW WORDS", words_new_path) %>
</center>